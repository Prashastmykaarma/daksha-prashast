{
  "manifest_version": 3,
  "name": "Daksha Recorder",
  "version": "1.0",
  "description": "Extension for Daksha",
  "action": {
    "default_icon": {             
        "128": "download.png"
      }
  },
  "icons": {
    "128": "download.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
      "tabs",
      "contextMenus",
      "storage"
  ],
  "background" : {
      "service_worker" : "eventPage.js"
  } , 
  "content_scripts":[
      {
          "js": [
            "dist/main.js"
          ],
          "matches": ["*://*/*"],
          "run_at": "document_end",
          "all_frames": false 
      }
  ]
}